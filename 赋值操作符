int main()
{
	int weight = 120;//体重
	weight = 90;//不满意就赋值
	double salary = 10000.0;
	salary = 20000.0;//使用赋值操作符赋值	
	//赋值操作符可连续使用：
	int a = 10;
	int x = 0;
	int y = 20;
	a = x = y + 1;//连续赋值
	//不建议这样写
	//换成同样的语义
	x = y + 1;
	a = x;
	//这样的写法更加清晰爽朗而且易于调试
	return 0;
}
复合赋值符
int main()
{
	int a = 10;
	//a = a + 2;
	a += 2;//符合赋值符
	a = a >> 1;
	a >>= 1;
	a = a & 1;
	a &= 1;


	return 0;

}
